    <%= image_tag(product.image.thumb.url)   %>
    <% else %>
    <%= image_tag("http://placehold.it/200x200&text=No Pic")   %>
    <% end %>
    <% end %>
  </div>
  <figcaption>
    <%= link_to product_path(product) do %>
    <h2><%= product.title %></h2>
    <p><%= product.description %> </p>
    <div class="price">¥<%= product.price %></div>

    <div clas="addgood">
