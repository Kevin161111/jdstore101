<div class="reviews_wrapper clearfix">
    <div class="pull-left">
        <p class="lead"><%= review.body %></p>
        <p>
            <small>
                <strong><%= time_ago_in_words(review.created_at) %>
                    ago</strong> Submitted
                by
                <%= review.user.email %></small>
        </p>
    </div>

    <div>
    <% if review.user == current_user %>
       <%= link_to("删除评论", product_review_path(@product, review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm pull-right") %>
    <% end %>
  </div>
</div>
